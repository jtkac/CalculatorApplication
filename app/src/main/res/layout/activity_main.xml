<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calc_result"
            tools:text="123456.123456"
            android:textSize="36sp"
            android:gravity="bottom|end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_clear"
            android:text="A/C"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_divide"
            android:text="/"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_multiply"
            android:text="x"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_back"
            android:text="BACK"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_7"
            android:text="7"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_8"
            android:text="8"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_9"
            android:text="9"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_subtract"
            android:text="-"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.58"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_4"
            android:text="4"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_5"
            android:text="5"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_6"
            android:text="6"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_add"
            android:text="+"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_1"
            android:text="1"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_2"
            android:text="2"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_3"
            android:text="3"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_equals"
            android:text="="
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_nothing"
            android:text=""
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_0"
            android:text="0"
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_decimal"
            android:text="."
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/calc_nothing_2"
            android:text=""
            android:textSize="28sp"
            android:background="@drawable/calc_button_background_grey"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>